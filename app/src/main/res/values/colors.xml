<?xml version="1.0" encoding="utf-8"?>
<!-- colors.xml is your app's color palette
     Professional tip: Use meaningful names and follow Material Design color guidelines
     Colors are in hexadecimal format: #AARRGGBB (Alpha, Red, Green, Blue) -->
<resources>
    <!-- Light Theme Colors -->
    <!-- Primary: Main brand color - think of it as your app's signature color -->
    <color name="primary">#FF6750A4</color> <!-- Material You Purple -->
    <color name="primary_variant">#FF4F378B</color> <!-- Darker purple for contrast -->
    <color name="on_primary">#FFFFFFFF</color> <!-- Text/icons on primary color -->

    <!-- Secondary: Accent color - adds personality and highlights important elements -->
    <color name="secondary">#FF625B71</color> <!-- Muted purple-grey -->
    <color name="secondary_variant">#FF4A4458</color> <!-- Darker variant -->
    <color name="on_secondary">#FFFFFFFF</color> <!-- Text/icons on secondary -->

    <!-- Background colors -->
    <color name="background">#FFFFFBFE</color> <!-- Slightly warm white -->
    <color name="surface">#FFFFFBFE</color> <!-- Cards, sheets, menus -->
    <color name="on_background">#FF1C1B1F</color> <!-- Text on background -->
    <color name="on_surface">#FF1C1B1F</color> <!-- Text on surfaces -->

    <!-- Dark Theme Colors -->
    <!-- Notice how dark theme inverts the brightness but keeps the hue -->
    <color name="primary_dark">#FFD0BCFF</color> <!-- Light purple for dark backgrounds -->
    <color name="primary_variant_dark">#FFB69DF8</color>
    <color name="on_primary_dark">#FF381E72</color> <!-- Dark text on light primary -->

    <color name="secondary_dark">#FFCCC2DC</color>
    <color name="secondary_variant_dark">#FFB3A9C4</color>
    <color name="on_secondary_dark">#FF332D41</color>

    <!-- Dark backgrounds -->
    <color name="background_dark">#FF1C1B1F</color> <!-- Near black -->
    <color name="surface_dark">#FF1C1B1F</color>
    <color name="on_background_dark">#FFE6E1E5</color> <!-- Light text -->
    <color name="on_surface_dark">#FFE6E1E5</color>

    <!-- Semantic colors - colors with specific meanings -->
    <color name="error">#FFB3261E</color> <!-- Red for errors -->
    <color name="success">#FF0F5223</color> <!-- Green for success -->
    <color name="warning">#FF7D5700</color> <!-- Orange for warnings -->

    <!-- App-specific colors -->
    <color name="currency_positive">#FF0F5223</color> <!-- Green for money earned -->
    <color name="divider">#1F000000</color> <!-- 12% black for subtle lines -->
    <color name="divider_dark">#1FFFFFFF</color> <!-- 12% white for dark theme -->
</resources>